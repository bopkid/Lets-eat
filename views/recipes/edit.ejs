<%- include('../partials/_head',{user_id:user_id)}) %>
<main>
    <h1>Edit Recipe</h1>
    <form action="/recipes/<%=recipe._id%>?_method=PUT" method="POST"> <!--Action is where do we want the request to go -->
        <div> 
            <label for="name">Name of Recipe</label><br />
            <input type='text' value= "<%=recipe.name%>" id="name" name="name"/> 
        </div>
        <br />
        <div>
            <label for="ingredients">Ingredients Needed to make this Recipe </label><br />
            <textarea id="ingredients" value= "<%=recipe.ingredients%>" name="ingredients"></textarea>
        </div>
        <div>
            <label for="direction">Directions for this Recipe </label><br />
            <textarea id="direction" value= "<%=recipe.direction%>" name="direction"></textarea>
        </div>
        <div>
            <label for="url">Place Image Link Here</label>
            <input type='url' value= "<%=recipe.url%>" id="url" name="url"/> 
        </div>
        <div>
            <label for="origin">What culture does this recipe belong to?</label> <br>
            <input type='checkbox'  id="origin" name="origin" value="Asian"/> 
            <label for="origin">Asian</label>

            <input type='checkbox' id="origin" name="origin" value="American"/> 
            <label for="origin">American</label>

            <input type='checkbox' id="origin" name="origin" value="Indian"/> 
            <label for="origin">Indian</label>

            <input type='checkbox' id="origin" name="origin" value="Mediterranean"/> 
            <label for="origin">Mediteranean</label>
        </div>
        <div>
            <label for="serving">How many people can this recipe feed?</label>
            <input type='number' value= "<%=recipe.serving%>"  id="serving" name="serving"/> 
        </div>
        <button type="submit">Add New Recipe</button> 
    </form>
</main>
<%- include('../partials/_footer') %>