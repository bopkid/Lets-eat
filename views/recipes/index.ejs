<%-include('../partials/_head',{user:user_id})%>
<link rel="stylesheet" type="text/css"   href="/css/index-recipe/style.css">
<link href='https://fonts.googleapis.com/css?family=Merriweather:300italic' rel='stylesheet' type='text/css'>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.2/animate.min.css">


    
<main>
    <h1>Our Library of Recipes</h1>

    <section  class = 'container'>
        <div class = 'row'>
            
            <%recipes.forEach((recipe) => {%> 
                
                <div class="col col-md-3 m-4">
                <div class="card animated fadeIn" style="width: 18rem;">
                    <img src="<%= recipe.url%>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h3 class="card-title">
                            <a href="/recipes/<%=recipe._id%>"><%= recipe.name %></a>
                        </h5>
                        <p class="card-text"> 
                            <h4 class = "title">Origin:</h4> <p class="answers"><%= recipe.origin%>
                         </p>
                         <p class="card-text"> 
                            <h4 class = "title">Ingredients:</h4><p class="answers"><%= recipe.ingredients%>
                         </p>
                         <p class="card-text"> 
                            <h4 class = "title">Ratings: </h4> <p class="answers"><%= recipe.avgRating%>
                         </p>
        <br>
        <section class = "recipe-container__ratings--add">
          <form action="/recipes/<%=recipe.id%>?_method=PUT" method="POST">
            <label for="ratings">Rating</label>
            <select name="ratings" id="ratings">
              <option class = "rating-bar" value="" disabled selected>Please select ...</option>
              <% for (let i=5; i>0; i--) { %>
              <option value=<%= i %>><%= i %></option>
              <% } %>
            </select>
            <button class = "btn" type="submit">Rate Recipe</button>
          </form>
          
        </section>
        
    </div>
    
</div>

</div>

<% }) %>
</div>
    </section>
    
    


    </main>
        



<%-include('../partials/_footer')%>