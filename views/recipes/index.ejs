<%-include('../partials/_head')%>
<link rel="stylesheet" href="/css/index-recipe/style.css">
<div class="row m-5 name">
    <h1>Recipes Page</h1>
</div>
<main>

    <section  class = 'container'>
        <div class = 'row'>
            
            <%recipes.forEach((recipe) => {%> 
                
                <div class="col col-md-3 m-4">
                <div class="card" style="width: 18rem;">
                    <img src="<%= recipe.url%>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="/recipes/<%=recipe._id%>"><%= recipe.name %></a>
                        </h5>
                        <p class="card-text"> 
                            Origin: <%= recipe.origin%>
                         </p>
                         <p class="card-text"> 
                            Ingredients: <%= recipe.ingredients%>
                         </p>
                         <p class="card-text"> 
                            Ratings: <%= recipe.avgRating%>
                         </p>
        <br>
        <section class = "recipe-container__ratings--add">
          <form action="/recipes/<%=recipe.id%>?_method=PUT" method="POST">
            <label for="ratings">Rating</label>
            <select name="ratings" id="ratings">
              <option class = "rating-bar" value="" disabled selected>Please select ...</option>
              <% for (let i=5; i>0; i--) { %>
              <option value=<%= i %>><%= i %></option>
              <% } %>
            </select>
            <button class = "btn" type="submit">Rate Recipe</button>
          </form>
          
        </section>
        
    </div>
    
</div>

</div>

<% }) %>
</div>
    </section>
    
    


    </main>
        



<%-include('../partials/_footer')%>