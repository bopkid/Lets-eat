<%- include('../partials/_head',) %>
<link rel="stylesheet" href="/css/show-recipe/style.css">
<main>

    <section class="d-flex justify-content-center">
        <div class="card" style="width: 30rem;">
            <img class="card-img-top" src="<%=recipe.url%>" alt="Card image cap">
            <div class="card-body">
              <h3 class="card-title">Recipe Details</h3>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Name of Recipe</li>
                <p><%=recipe.name%></p>

              <li class="list-group-item">Author</li>
                <a href='/users/<%= user._id %>'' ><p><%= user.name %> </p></a>

              <li class="list-group-item">Ingredients Needed to make this Recipe </li>
              <p><%=recipe.ingredients%></p>
           
            <li class="list-group-item">Directions for this Recipe </li>
            <p><%=recipe.direction%></p>

            <li class="list-group-item">Origin of Recipe</li>
            <p><%=recipe.origin%></p>
        </ul>
    </section>
