<%- include('../partials/_head', {user:user_id}) %>
<link rel="stylesheet" href="/css/recipe-new/style.css">
<script src = '/new.js' defer></script>
<main>
    <h1>Add New Recipe</h1>
    <form action="/users " method="POST"> 
        <div> 
            <label for="name">Name of Recipe</label><br />
            <input type='text' id="name" name="name"/> 
        </div>
        <br />

        <label for="user">Author:</label>
        <select name="user" id="user">
            <option value="<%= user._id %>"><%= user.name %></option>
        </select>
        <br />
        <label for="ingredients">Ingredients Needed to make this Recipe </label>
        <button type ="menu" class= 'new-ingredient-btn' >new ingredients</button><br />
        <div class = 'ingredients'>

            <textarea class="new-ingredients" name="ingredients"  rows="1" cols="25"></textarea>
        
        </div>

        <div>
            <label for="direction">Directions for this Recipe </label>
      
            <button type ="menu" class= 'new-dierections-btn' >new dierections</button><br />
            <div class = 'dierections'>

                <textarea  class = 'new-dierections' name="direction"  rows="5" cols="70"></textarea>
             </div>
        </div>

        <div>
            <label for="url">Place Image Link Here</label>
            <input type = 'url' id="url" name="url"/> 
        </div>
        
        <div>
            <label for="origin">What culture does this recipe belong to?</label> <br>
            <input type='checkbox' id="origin" name="origin" value="Asian"/> 
            <label for="origin">Asian</label>

            <input type='checkbox' id="origin" name="origin" value="American"/> 
            <label for="origin">American</label>

            <input type='checkbox' id="origin" name="origin" value="Indian"/> 
            <label for="origin">Indian</label>

            <input type='checkbox' id="origin" name="origin" value="Mediterranean"/> 
            <label for="origin">Mediteranean</label>
        </div>

        <div>
            <label for="serving">How many people can this recipe feed?</label>
            <input type='number' id="serving" name="serving"/> 
        </div>
        
        <button type="submit">Add New Recipe</button> 
    </form>
</main>
<%- include('../partials/_footer') %>