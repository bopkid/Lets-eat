<%-include('../partials/_head')%>

<main>
    <button>
        <a href="/users/<%= user._id%>/new">Add New Recipes</a>
    </button>
    <button>
        <a href="/users/<%= user._id%>/recipes">My Recipes</a>
    </button>

    <h1>User Details</h1>
    
    <section>
        <h4>Name:</h4> 
        <p><%=user.name%></p>

